# ============================================================================
# FingerFlow Production Environment Configuration
# ============================================================================
#
# INSTRUCTIONS:
# 1. Copy this file to .env in the project root
# 2. Replace all placeholder values with your production secrets
# 3. Never commit the .env file to version control
# 4. Keep this template updated when adding new environment variables
#
# Generate secrets:
#   SECRET_KEY: openssl rand -hex 32
#   POSTGRES_PASSWORD: openssl rand -hex 32
# ============================================================================

# ============================================================================
# Domain Configuration
# ============================================================================
DOMAIN=fingerflow.zitek.cloud

# ============================================================================
# Database Configuration (PostgreSQL)
# ============================================================================
# CRITICAL: Generate a strong password with: openssl rand -hex 32
POSTGRES_PASSWORD=CHANGE_ME_GENERATE_STRONG_PASSWORD

# This is automatically constructed in docker-compose.prod.yml
# DATABASE_URL=postgresql://fingerflow:${POSTGRES_PASSWORD}@postgres:5432/fingerflow

# ============================================================================
# JWT & Authentication
# ============================================================================
# CRITICAL: Generate with: openssl rand -hex 32
SECRET_KEY=CHANGE_ME_GENERATE_WITH_OPENSSL

ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Google OAuth2 Configuration
# ============================================================================
# Get credentials from: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Automatically set in docker-compose.prod.yml
# GOOGLE_REDIRECT_URI=https://${DOMAIN}/auth/google/callback

# ============================================================================
# CORS & Frontend Configuration
# ============================================================================
# Automatically set in docker-compose.prod.yml
# CORS_ORIGINS=https://${DOMAIN}
# FRONTEND_URL=https://${DOMAIN}

# ============================================================================
# Logging Configuration
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_PROVIDER=smtp
# Options: console (dev only), smtp, sendgrid

EMAIL_FROM=noreply@fingerflow.zitek.cloud
EMAIL_FROM_NAME=FingerFlow

# SMTP Configuration (if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.your-provider.com
SMTP_PORT=587
SMTP_USERNAME=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_USE_TLS=true

# SendGrid Configuration (if EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# ============================================================================
# Rate Limiting Configuration
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# Security Configuration
# ============================================================================
# CSRF Protection (keep enabled)
CSRF_PROTECTION_ENABLED=true

# HTTPS Redirect (false when behind Traefik, which handles HTTPS)
HTTPS_REDIRECT_ENABLED=false

# Security Headers (keep enabled)
SECURITY_HEADERS_ENABLED=true

# Auth Rate Limiting (keep enabled)
AUTH_RATE_LIMIT_ENABLED=true

# ============================================================================
# Account Lockout Configuration
# ============================================================================
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION_MINUTES=15
LOCKOUT_RESET_AFTER_MINUTES=60

# ============================================================================
# Optional: Monitoring & Analytics
# ============================================================================
# Add monitoring service keys here if needed
# SENTRY_DSN=your-sentry-dsn
# ANALYTICS_ID=your-analytics-id
