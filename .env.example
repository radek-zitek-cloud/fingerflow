# FingerFlow Docker Environment Configuration
# Copy this file to .env and update with your values

# ============================================================================
# Database Configuration
# ============================================================================
DATABASE_URL=sqlite:///./data/fingerflow.db
# For PostgreSQL: postgresql://user:password@postgres:5432/fingerflow

# ============================================================================
# JWT Configuration
# ============================================================================
# IMPORTANT: Change this in production!
SECRET_KEY=your-secret-key-change-in-production-use-openssl-rand-hex-32
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Google OAuth2 (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost,http://localhost:80,http://frontend

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_PROVIDER=console
# Options: console (dev), smtp, sendgrid

EMAIL_FROM=noreply@fingerflow.com
EMAIL_FROM_NAME=FingerFlow
FRONTEND_URL=http://localhost

# SMTP Settings (required if EMAIL_PROVIDER=smtp)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-gmail-app-password
SMTP_USE_TLS=true

# SendGrid Settings (required if EMAIL_PROVIDER=sendgrid)
SENDGRID_API_KEY=your-sendgrid-api-key

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# Production Notes
# ============================================================================
# 1. Generate a secure SECRET_KEY:
#    openssl rand -hex 32
#
# 2. For Gmail SMTP:
#    - Enable 2FA on your Google account
#    - Generate an App Password at https://myaccount.google.com/apppasswords
#    - Use the App Password in SMTP_PASSWORD
#
# 3. For production database, use PostgreSQL:
#    - Install PostgreSQL
#    - Create database: CREATE DATABASE fingerflow;
#    - Update DATABASE_URL with connection string
#
# 4. Set LOG_LEVEL=ERROR in production to reduce log volume
#
# 5. Adjust RATE_LIMIT_REQUESTS based on your traffic needs
