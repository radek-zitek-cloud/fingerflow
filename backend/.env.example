# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL (recommended for all environments)
DATABASE_URL=postgresql://fingerflow:fingerflow_dev_password@localhost:5432/fingerflow

# For Docker: Use container hostname
# DATABASE_URL=postgresql://fingerflow:fingerflow_dev_password@postgres:5432/fingerflow

# ============================================================================
# JWT Configuration
# ============================================================================
# SECURITY: Generate with `openssl rand -hex 32` and keep secret!
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Google OAuth2 (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use DEBUG for development, INFO for production

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_PROVIDER=console
# Options: console (logs to terminal), smtp, sendgrid

EMAIL_FROM=noreply@fingerflow.com
EMAIL_FROM_NAME=FingerFlow
FRONTEND_URL=http://localhost:5173

# SMTP Settings (only if EMAIL_PROVIDER=smtp)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-gmail-app-password
# SMTP_USE_TLS=true

# SendGrid Settings (only if EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60
