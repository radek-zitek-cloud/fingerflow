# ============================================================================
# Database Configuration
# ============================================================================
# PostgreSQL (recommended for all environments)
DATABASE_URL=postgresql://fingerflow:fingerflow_dev_password@localhost:5432/fingerflow

# For Docker: Use container hostname
# DATABASE_URL=postgresql://fingerflow:fingerflow_dev_password@postgres:5432/fingerflow

# ============================================================================
# JWT Configuration
# ============================================================================
# SECURITY: Generate with `openssl rand -hex 32` and keep secret!
SECRET_KEY=your-secret-key-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# Google OAuth2 (Optional)
# ============================================================================
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# ============================================================================
# CORS Configuration
# ============================================================================
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ============================================================================
# Logging
# ============================================================================
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Use DEBUG for development, INFO for production

# ============================================================================
# Email Configuration
# ============================================================================
EMAIL_PROVIDER=console
# Options: console (logs to terminal), smtp, sendgrid

EMAIL_FROM=noreply@fingerflow.com
EMAIL_FROM_NAME=FingerFlow
FRONTEND_URL=http://localhost:5173

# SMTP Settings (only if EMAIL_PROVIDER=smtp)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USERNAME=your-email@gmail.com
# SMTP_PASSWORD=your-gmail-app-password
# SMTP_USE_TLS=true

# SendGrid Settings (only if EMAIL_PROVIDER=sendgrid)
# SENDGRID_API_KEY=your-sendgrid-api-key

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# ============================================================================
# Security Configuration
# ============================================================================
# CSRF Protection
CSRF_PROTECTION_ENABLED=true

# HTTPS Redirect (set to false when behind Traefik/reverse proxy)
HTTPS_REDIRECT_ENABLED=false

# Security Headers
SECURITY_HEADERS_ENABLED=true

# Auth Rate Limiting (stricter limits for auth endpoints)
AUTH_RATE_LIMIT_ENABLED=true

# ============================================================================
# Account Lockout Configuration
# ============================================================================
# Maximum failed login attempts before account lockout
MAX_LOGIN_ATTEMPTS=5

# Account lockout duration in minutes
LOCKOUT_DURATION_MINUTES=15

# Reset failed attempts counter after this many minutes of no failures
LOCKOUT_RESET_AFTER_MINUTES=60

# ============================================================================
# Production-Specific Settings
# ============================================================================
# For production deployment, set these in your .env file:
#
# POSTGRES_PASSWORD=your-strong-database-password-here
# SECRET_KEY=$(openssl rand -hex 32)
# DOMAIN=fingerflow.zitek.cloud
#
# GOOGLE_REDIRECT_URI=https://fingerflow.zitek.cloud/auth/google/callback
# CORS_ORIGINS=https://fingerflow.zitek.cloud
# FRONTEND_URL=https://fingerflow.zitek.cloud
#
# EMAIL_PROVIDER=smtp
# SMTP_HOST=your-smtp-host
# SMTP_PORT=587
# SMTP_USERNAME=your-smtp-username
# SMTP_PASSWORD=your-smtp-password
# EMAIL_FROM=noreply@fingerflow.zitek.cloud
